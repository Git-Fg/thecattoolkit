{
  "description": "Meta plugin unified hooks: security, validation, context management, and governance",
  "imports": [
    "auto_log",
    "restore_context",
    "compact_memory"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/context/restore_context.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/python/hook_runner.py\" protect-files",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/python/hook_runner.py\" security-check",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/typescript/protect-files.js\"",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/typescript/security-check.js\"",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/python/hook_runner.py\" type-check-on-edit",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/typescript/type-check.js\"",
            "timeout": 30000
          }
        ]
      },
      {
        "matcher": "Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/context/auto_log.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/context/compact_memory.py\"",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/context/evaluate_stop.py\"",
            "timeout": 20
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/meta/hooks/scripts/context/evaluate_subagent.py\"",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
