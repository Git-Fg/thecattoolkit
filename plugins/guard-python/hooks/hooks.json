{
  "description": "thecattoolkit hooks: file safety warnings, security checks, and type-checking",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/plugins/guard-python/hooks/scripts/protect-files.py\"",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/plugins/guard-python/hooks/scripts/security-check.py\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/plugins/guard-python/hooks/scripts/type-check-on-edit.py\"",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}