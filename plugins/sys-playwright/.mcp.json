{
  "mcpServers": {
    "pw-structure": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--snapshot-mode",
        "incremental",
        "--image-responses",
        "omit"
      ]
    },
    "pw-image": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--snapshot-mode",
        "incremental",
        "--image-responses",
        "allow",
        "--caps",
        "vision"
      ]
    }
  }
}
