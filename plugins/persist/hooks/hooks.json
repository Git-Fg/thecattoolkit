{
  "description": "Hook-Powered Context System: Simplified and modernized",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/restore_context.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '{tool: .tool_name, file: (.tool_input.file_path // .tool_input.TargetFile // .tool_input.command[:100] // \"unknown\")} | \"[\" + (now | strftime(\"%Y-%m-%d %H:%M:%S\")) + \"] \" + .tool + \": \" + .file' >> \"$CLAUDE_PROJECT_DIR/.cattoolkit/context/context.log\" 2>/dev/null || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/compact_memory.py\"",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate if this Claude session should stop. Check for blockers:\n1. Run 'git status --porcelain' - if output is non-empty, there are uncommitted changes\n2. Check if .cattoolkit/planning/HANDOFF.md exists - indicates blocked work\n\nIf either blocker exists, respond: {\"ok\": false, \"reason\": \"Uncommitted git changes or active HANDOFF.md - commit or resolve before stopping\"}\nOtherwise respond: {\"ok\": true}",
            "timeout": 15
          }
        ]
      }
    ]
  }
}