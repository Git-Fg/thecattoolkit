{
  "model": "sonnet",
  "permissions": {
    "allow": ["Bash(git:*)"],
    "deny": ["Read(./.env)"]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/safety-check.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "NODE_ENV": "production"
  },
  "enableAllProjectMcpServers": true
}
